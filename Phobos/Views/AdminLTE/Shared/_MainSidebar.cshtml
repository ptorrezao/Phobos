@{
    UserAccountViewModel userAccount = ViewBag.UserAccount;
}
<aside class="main-sidebar">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@userAccount.ImageUrl" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@userAccount.FullName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> @userAccount.CurrentStatus</a>
            </div>
        </div>
        @Html.Partial("_Search")
        @Html.Partial("_Menu")
    </section>
</aside>
