@using NonFactors.Mvc.Grid;
@using Phobos.Helpers;
@model IGridPager

<div class="mvc-grid-pager  @Model.CssClasses">
    <div class="mailbox-controls">
        @Html.RenderHelper("ButtonsForPager")
        <div data-page="@(Model.CurrentPage)" class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></div>
        <div class="pull-right">
            @(Model.TotalPages > 0 ? Model.CurrentPage : 0)/@Model.TotalPages
            <div class="btn-group">
                @if (Model.CurrentPage > 1)
                {
                    <div data-page="1" class="btn btn-default btn-sm"><i class="fa fa-fast-backward"></i>&nbsp;</div>
                    <div data-page="@(Model.CurrentPage - 1)" class="btn btn-default btn-sm"><i class="fa fa-chevron-left"></i>&nbsp;</div>
                }
                else
                {
                    <div class="btn btn-default btn-sm disabled"><i class="fa fa-fast-backward"></i>&nbsp;</div>
                    <div class="btn btn-default btn-sm disabled"><i class="fa fa-chevron-left"></i>&nbsp;</div>
                }
                @for (Int32 page = Model.FirstDisplayPage; page <= Model.TotalPages && page < Model.FirstDisplayPage + Model.PagesToDisplay; page++)
                {
                    if (page == Model.CurrentPage)
                    {
                        <div class="btn btn-default btn-sm active">@page</div>
                    }
                    else
                    {
                        <div class="btn btn-default btn-sm" data-page="@page">@page&nbsp;</div>
                    }
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <div class="btn btn-default btn-sm" data-page="@(Model.CurrentPage>0?Model.CurrentPage + 1:0)"><i class="fa fa-chevron-right"></i>&nbsp;</div>
                    <div class="btn btn-default btn-sm" data-page="@(Model.TotalPages)"><i class="fa fa-fast-forward"></i>&nbsp;</div>
                }
                else
                {
                    <div class="btn btn-default btn-sm disabled"><i class="fa fa-chevron-right"></i>&nbsp;</div>
                    <div class="btn btn-default btn-sm disabled"><i class="fa fa-fast-forward"></i>&nbsp;</div>
                }

            </div>
        </div>
    </div>
</div>
