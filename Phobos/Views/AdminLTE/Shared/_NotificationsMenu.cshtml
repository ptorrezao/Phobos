@{
    List<UserNotificationViewModel> userNotifications = ViewBag.UserNotifications;
}
<li class="dropdown notifications-menu">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        @if (userNotifications.Count > 0)
        {
            <span class="label label-warning">@userNotifications.Count</span>
        }
    </a>
    @if (userNotifications.Count > 0)
    {
        <ul class="dropdown-menu">
        <li class="header">You have @userNotifications.Count notifications</li>
        <li>
            <ul class="menu">
                <li>
                    @foreach (var item in userNotifications)
                    {
                        <a href="@item.Link">
                            <i class="fa @item.FontAwesome text-aqua"></i> @item.Title
                        </a>
                    }
                </li>
            </ul>
        </li>
        <li class="footer"><a href="#">View all</a></li>
    </ul>
    }
</li>
